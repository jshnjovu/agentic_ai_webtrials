# --- App ---
NODE_ENV="development"

# --- OpenAI ---
OPENAI_API_KEY=your_openai_api_key_here

# --- Google Services ---
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here
GOOGLE_GENERAL_API_KEY=your_google_general_api_key_here

# --- Yelp Fusion API ---
YELP_FUSION_API_KEY=your_yelp_fusion_api_key_here

# --- Lighthouse API (Google PageSpeed Insights) ---
LIGHTHOUSE_API_KEY=your_lighthouse_api_key_here

# --- Vercel Deployment ---
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id_here
VERCEL_PROJECT_ID=your_vercel_project_id_here

# --- Supabase (Database) ---
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# --- Rate Limiting Configuration ---
GOOGLE_PLACES_RATE_LIMIT_PER_MINUTE=100
YELP_FUSION_RATE_LIMIT_PER_DAY=5000
LIGHTHOUSE_RATE_LIMIT_PER_DAY=25000
LIGHTHOUSE_RATE_LIMIT_PER_MINUTE=240
HEURISTICS_RATE_LIMIT_PER_MINUTE=60
FALLBACK_RATE_LIMIT_PER_MINUTE=120

# --- API Timeout Settings ---
API_TIMEOUT_SECONDS=30
LIGHTHOUSE_AUDIT_TIMEOUT_SECONDS=30
LIGHTHOUSE_CONNECT_TIMEOUT_SECONDS=10
LIGHTHOUSE_READ_TIMEOUT_SECONDS=25
LIGHTHOUSE_FALLBACK_TIMEOUT_SECONDS=15

# --- Circuit Breaker Configuration ---
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# --- Heuristic Evaluation Configuration ---
HEURISTICS_EVALUATION_TIMEOUT_SECONDS=15

# --- Application Configuration ---
DEBUG=true
APP_NAME="LeadGen Makeover Agent"
APP_VERSION="1.0.0"
API_V1_STR="/api/v1"
PROJECT_NAME="LeadGen Makeover Agent"

# --- Slack Notifications (for CI/CD) ---
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# --- GitHub Actions Secrets (for CI/CD) ---
GITHUB_TOKEN=your_github_token_here

# --- Monitoring and Analytics ---
SENTRY_DSN=your_sentry_dsn_here
VERCEL_ANALYTICS_ID=your_vercel_analytics_id_here

# --- File Storage (Vercel Blob) ---
BLOB_READ_WRITE_TOKEN=your_blob_read_write_token_here

# --- Redis Cache (Vercel KV) ---
KV_URL=your_redis_url_here
KV_REST_API_URL=your_redis_rest_api_url_here
KV_REST_API_TOKEN=your_redis_rest_api_token_here
KV_REST_API_READ_ONLY_TOKEN=your_redis_rest_api_read_only_token_here
