# LeadGen Makeover Agent API Configuration
# Copy this file to .env and fill in your actual API keys

# Google Places API Configuration
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Yelp Fusion API Configuration
YELP_FUSION_API_KEY=your_yelp_fusion_api_key_here

# Lighthouse CLI Configuration
# Note: Lighthouse CLI must be installed globally or via npx
# Install with: npm install -g lighthouse
LIGHTHOUSE_CLI_PATH=lighthouse  # or 'npx lighthouse' if not installed globally
LIGHTHOUSE_CHROME_PATH=  # Optional: path to Chrome/Chromium executable

# Rate Limiting Configuration (optional - defaults will be used if not set)
GOOGLE_PLACES_RATE_LIMIT_PER_MINUTE=100
YELP_FUSION_RATE_LIMIT_PER_DAY=5000
LIGHTHOUSE_RATE_LIMIT_PER_DAY=100  # Reduced for CLI-based audits
LIGHTHOUSE_RATE_LIMIT_PER_MINUTE=2  # Reduced for CLI-based audits

# Heuristic Evaluation Configuration
HEURISTICS_RATE_LIMIT_PER_MINUTE=60
HEURISTICS_EVALUATION_TIMEOUT_SECONDS=15

# API Timeout Settings (optional - defaults will be used if not set)
API_TIMEOUT_SECONDS=30
LIGHTHOUSE_AUDIT_TIMEOUT_SECONDS=120  # Increased for CLI audits
LIGHTHOUSE_CONNECT_TIMEOUT_SECONDS=10
LIGHTHOUSE_READ_TIMEOUT_SECONDS=25
LIGHTHOUSE_FALLBACK_TIMEOUT_SECONDS=60  # Increased for CLI fallback

# Circuit Breaker Configuration (optional - defaults will be used if not set)
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Application Configuration
DEBUG=False