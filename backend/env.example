# Yelp Fusion API Configuration
YELP_FUSION_API_KEY=your_yelp_fusion_api_key_here

# Lighthouse API Configuration (Google PageSpeed Insights)
LIGHTHOUSE_API_KEY=c76e3daa.c159a1e6667343628e8f94366b91f745

